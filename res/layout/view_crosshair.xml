<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cm.crackshot"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <cm.crackshot.views.CrosshairView
        android:id="@id/crosshairView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ccc"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        android:visibility="visible"
        app:exampleColor="#33b5e5"
        app:exampleDimension="24sp"
        app:exampleString="Hello, CrosshairView" />

    <ImageView
        android:id="@+id/targetingBoxView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/targetbox" />

</FrameLayout>