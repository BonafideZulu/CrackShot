<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity" >

    <Button
        android:id="@+id/OptionsActivity_backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:text="@string/OptionsActivity_backButtonText" />

    <TextView
        android:id="@+id/OptionsActivity_measurementSystemsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="87dp"
        android:layout_toLeftOf="@+id/OptionsActivity_backButton"
        android:text="@string/OptionsActivity_measurementSystemText" />

    <TextView
        android:id="@+id/OptionsActivity_targetBoxColorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/OptionsActivity_reticleColorTextView"
        android:layout_below="@+id/OptionsActivity_reticleColorTextView"
        android:layout_marginTop="28dp"
        android:text="@string/OptionsActivity_targetBoxColorText" />

    <TextView
        android:id="@+id/OptionsActivity_reticleColorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/OptionsActivity_measurementSystemsTextView"
        android:layout_marginTop="27dp"
        android:text="@string/OptionsActivity_reticleColorText" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/OptionsActivity_reticleColorTextView"
        android:layout_alignLeft="@+id/OptionsActivity_backButton" >
    </RadioGroup>

    <RadioButton
        android:id="@+id/radio0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/OptionsActivity_reticleColorTextView"
        android:layout_alignRight="@+id/OptionsActivity_backButton"
        android:checked="true"
        android:text="@string/OptionsActivity_metersText" />

    <RadioButton
        android:id="@+id/radio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/OptionsActivity_measurementSystemsTextView"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/radio0"
        android:text="@string/OptionsActivity_yardsText" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/OptionsActivity_targetBoxColorTextView"
        android:layout_marginTop="18dp" />

</RelativeLayout>